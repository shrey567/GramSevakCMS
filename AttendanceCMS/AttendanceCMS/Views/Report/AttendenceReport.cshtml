@model AttendanceCMS.Bll.ViewModels.ChildModel.Report.AttendenceReportVM
@{
    ViewBag.Title = "AttendanceReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/assets/css/datepicker.css" rel="stylesheet" />
<script src="~/Content/DatatableGrid/Report/AttendenceReport.js"></script>

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">

            <div class="page-header">
                <div class="row align-items-end">
                    <div class="col-lg-8">
                        <div class="page-header-title">
                            <div class="d-inline">
                                <h4>Attendance Report</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="page-header-breadcrumb">
                            <ul class="breadcrumb-title">
                                <li class="breadcrumb-item">
                                    <a href="/Home/Index"> <i class="feather icon-home"></i> </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#">Report</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#">Attendance Report</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">

                        <div class="card">
                            <div class="card-header">
                           
                                <div class="row">
                                    <div class="col-sm-3">
                                        <div class="controls">

                                            <label> From Date</label>
                                            <input id="txt_fdate" class="datepicker form-control form-control-sm" type="text" />
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="controls">

                                            <label>To Date</label>
                                            <input id="txt_tdate" class="datepicker form-control form-control-sm" type="text" />
                                        </div>
                                    </div>
                                    @*<div class="col-sm-4">

                                        <label>Select Employee</label>
                                        <select id="selectnumber" class="form-control form-control form-control-sm"></select>
                                    </div>*@

                                    <div class="col-sm-4">
                                        @Html.LabelFor(m => m.EmployeeID)
                                        @Html.DropDownListFor(model => model.EmployeeID, Model.EmployeeList, new { @class = "form-control form-control form-control-sm", required = "required" })
                                        @Html.ValidationMessageFor(model => model.EmployeeID, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-sm-2">
                                        <div class="controls">
                                            <input data-background-color="filter-button-box-color" style="margin-top:30px;padding:6px" class="btn btn-sm btn-primary" type="button" value="Filter Records" id="filter" onclick="Search()" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-block">
                                <div class="dt-responsive table-responsive">
                                    @*<a href="Employee" type="button" class="btn btn-sm btn-primary float-right" style="margin-left: 10px;">Create</a>*@
                                    <table id="datatable" class="table table-striped table-bordered nowrap">
                                        <thead>
                                            <tr>
                                                <th>Employee</th>
                                                <th>Date</th>
                                                <th>In Time</th>
                                                <th>Out Time</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
        var date = new Date();

        var day = date.getDate();
        var month = date.getMonth() + 1;
        var year = date.getFullYear();

        if (month < 10) month = "0" + month;
        if (day < 10) day = "0" + day;

        var today = day + "/" + month + "/" + year;

        document.getElementById('txt_fdate').value = today;
        document.getElementById('txt_tdate').value = today;


</script>
<script src="~/Content/assets/js/datepicker.js"></script>
<script type="text/javascript">
  $('.datepicker').datepicker({
      format: 'dd/mm/yyyy',
      weekStart: 1,
      color: 'red',
      pickTime: false
  }).on('changeDate', function (e) {

      $(this).datepicker('hide');
      $('.dtpk_drpdwn').hide();

  });
  //hide  show on hover
  $('#txt_fdate').focus(function () {
      $('.dtpk_drpdwn').eq(1).hide();
  });
  $('#txt_tdate').focus(function () {
      $('.dtpk_drpdwn').eq(0).hide();
  });

</script>
<script>
    $(document).ready(function () {
        //alert(today);
        $('#txt_fdate').val(today);

        $('#order-table').DataTable({
            "order": [
                [3, "desc"]
            ]
        });

    });
    $('#filter').click(function () {
        //alert($("#txt_fdate").val());
    })
</script>